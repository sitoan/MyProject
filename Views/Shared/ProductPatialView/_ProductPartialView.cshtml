@model List<Product>

<style>
    .men-item-carousel .thumb img {
        width: 100%; 
        height: 368.91px; 
        object-fit: cover; 
        border-radius: 10px; 
        box-shadow: 0 4px 8px rgba(250, 206, 206, 0.1);
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="men-item-carousel">
                <div class="owl-men-item owl-carousel">
                    @if (Model?.Any() == true)
                    {
                        @foreach (var product in Model)
                        {
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li><a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><i class="fa fa-eye"></i></a></li>
                                            <li><a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><i class="fa fa-star"></i></a></li>
                                            <li><a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <img src="@(product.Image)" alt="@product.Name">
                                </div>
                                <div class="down-content">
                                    <h4>@product.Name</h4>
                                    <span>@product.Price VND</span>
                                    <ul class="stars">
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                    </ul>
                                    @if (product.Inventory <= 0)
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                    else if (product.Inventory < 10)
                                    {
                                        <span class="badge bg-warning">Low Stock</span>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center w-100">
                            <p class="alert alert-info">No products available in this category.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
